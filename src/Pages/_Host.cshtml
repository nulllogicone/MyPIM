@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace MyPIM.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="MyPIM.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            <div class="dev-error-overlay">
                <div class="container mt-5">
                    <div class="alert alert-danger shadow-lg">
                        <h1 class="display-4">Application Error</h1>
                        <p class="lead">An unhandled exception has occurred.</p>
                        <hr>
                        <p>Detailed error information has been logged to the <strong>Browser Console</strong> (F12) and the <strong>Server Console</strong>.</p>
                        <p>You can enable "Unknown Exceptions" in VS Code breakpoints to stop execution when this happens.</p>
                    </div>
                </div>
            </div>
            <style>
                .dev-error-overlay {
                    position: fixed;
                    top: 0;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    background-color: rgba(0,0,0,0.8);
                    z-index: 9999;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    pointer-events: all;
                }
            </style>
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
